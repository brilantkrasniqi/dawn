        fixedHeight: 100,
        isNavigation: true,
        direction: "ttb",
        height: "auto",
        lazyLoad: "nearby",
        pagination: false,
        cover: true,
        trimSpace: true,
        breakpoints: {
          992: {
            direction: "ltr"
          },
          450: {
            fixedWidth: 60,
            fixedHeight: 40

          }
        }
      });
      mainProd.sync(prodThumbnails);
      mainProd.mount();
      prodThumbnails.mount();
    }
  }
