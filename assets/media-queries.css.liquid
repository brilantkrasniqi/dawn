/* Large Desktops */
@media (max-width: 1400px) {

}

/* Desktop */
@media (max-width: 1200px) {
  .mobileNavContainer {
    position: fixed;
    top: 0;
    left: -1000px;
    z-index: 40;
    width: 390px;
    padding: 16px;
    background-color: white;
    height: 100dvh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: left 0.2s ease-in-out;
    border: 1px solid #0b266f16;
  }
  .mobileActive {
    top: 0;
    left: 0;
  }
  .mobileNavLinks {
    padding-top: 48px;
    height: fit-content;
  }
  .mobileNavItem {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #0b266f16;
    padding: 1rem 0;
  }
  .emailNavMobile {
    padding-top: 48px;
  }
  .mobileNavLogo {
    width: 65px;
    height: 31px;
  }
}

/* Large Tablets */
@media (max-width: 992px) {
  .r-down {
    transform: rotateZ(45deg);
  }
  .r-up {
    transform: translateY(-6px) rotateZ(-45deg);
  }

  .heroImage {
    height: 60vh;
    object-fit: cover;
  }
  
  #zeroPlastic {
    padding: 5rem;
  }
  .showCaseImg img {
    width:  100% !important;
   
  }
  .singleProdContainer {
    height: 600px
  }

  #thumbnailProductShowCase .splide__list {
    display:flex;
    align-items: center;
    justify-content: center;
    
  }
  #thumbnailProductShowCase .splide__arrow--prev svg {
    left: 0%;
    top: 75%;
    transform: translateY(-75%) rotate(180deg);
  }
  #thumbnailProductShowCase .splide__arrow--next svg {
    right: 0%;
    top: 75%;
    transform: translateY(-75%);
  }
}

/* Tablets */
@media (max-width: 768px) {
  #orderBulk {
    background-image: url("/assets/images/png/tp-pink-mb-hq.png");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    padding: 2.25rem;
  }
  .cardContainer {
    max-width: 700px;
  }
  #zeroPlastic {
    padding: 4rem;
  }
  .b2bContainer {
    width: 100%;
  }
  .cartContainer {
    max-width:400px;
    padding: 1rem;
    height: 100dvh;
  }
  .cartItemContainer .prodImage {
    padding: 0.725rem;
  }
  .quantity {
    max-width: 100% !important;
  }
  #thumbnailProductShowCase .splide__arrow--prev svg {
    top:75%;
    left: 0%;
    transform: translateY(-75%) rotate(180deg) !important;
  }
  #thumbnailProductShowCase .splide__arrow--next svg {
    right: 0%;
    top:75%;
    transform: translateY(-75%) !important;
  }
}

/* Phones */
@media (max-width: 576px) {

  .section-margin {
    margin-top: 2rem !important;
  }
  #search-btn-nav {
    margin-right: -10px;
    position: relative;
    z-index: 30;
    width: 18px;
    height: 18px;
  }
  #zeroPlastic h1 {
    font-size: 24px !important;
  }
  .prod-image {
    height: 150px !important;
  }
  .b2bContainer {
    width: 90svw;
  }
  .mobileNavContainer {
    width: 320px !important;
  }
  .cartContainer {
    max-width:375px !important;
    padding:0.5rem !important;
  }
  #quantityBtnM,
  #quantityBtnP {
    width: 10px;
  }
  .p-14 {
    padding: 5px !important;
  }
  #nav-logo {
    width: 70px !important;
    height: 45px !important;
  }
  .singleProdContainer {
    height: 370px
  }
  .cart-nav {
    min-width: 45px;
}
}

@media (max-width: 450px) {
  #thumbnailProductShowCase .splide__slide {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .thumbnailProdContainer img {
    width: 55px;
    height: 35px;
  }
}

