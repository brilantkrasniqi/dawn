<footer class="section-padding">
  <div class="custom-container">
    <div class="row pb-3 border-bottom">
      <div class="col-12  d-flex align-items-center justify-content-center">
        <img
          src={{'flutura-logo-lg.svg' | asset_url}}
          width="104"
          height="50"
          id="nav-logo"
          alt="" />
      </div>
      {% if linklists.footer.links.size > 0 %}
        <div class="col-md-12 col-8">
          <div class="row d-md-none d-flex">
            {% for link in linklists.footer.links %}
              <a href="{{ link.url}}" class="pe-2">{{ link.title }}</a>
            {% endfor %}
          </div>


          <div class="row d-md-flex d-none pt-3">
            <div class="col-12 d-flex justify-content-center">
              {% for link in linklists.footer.links %}
                <a href="{{ link.url}}" class="pe-2">{{ link.title }}</a>
              {% endfor %}
            </div>
          </div>
        </div>
      {% endif %}
    </div>
    <div class="row py-3">
      <div class="col-md-4 col-12 order-md-1 order-3">
        <p class="text-md-start text-center">
          2025 Flutra Â© All Rights Reserved
        </p>
      </div>
      <div class="col-md-4 col-12 order-md-2 order-1">
        <div class="d-flex align-items-center justify-content-center">
          <a href="https://www.instagram.com/flutraofficial" class="pe-3">
            <img
              src="{{'instagram.svg' | asset_url}}"
              width="24"
              height="24"
              class="socialLogo"
              alt="instagram" />
          </a>
          <a href="https://www.facebook.com/flutraofficial/" class="pe-3">
            <img
              src="{{'facebook.svg' | asset_url}}"
              width="24"
              height="24"
              class="socialLogo"
              alt="Facebook" />
          </a>

          <a href="https://www.tiktok.com/@flutraofficial" class="">
            <img
              src="{{'tik-tok-blue.png' | asset_url}}"
              width="24"
              height="24"
              class="socialLogo"
              alt="instagram" />
          </a>
        </div>
      </div>
      <div class="col-md-4 col-12 d-flex justify-content-md-end flex-wrap justify-content-center order-md-3 order-2 py-md-0 py-3">
        {% for link in linklists.bottom-menu.links %}
          <a href="{{link.url}}" class="pe-sm-3 px-1 pt-sm-0 pt-2">{{ link.title }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
</footer>