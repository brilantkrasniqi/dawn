{% layout "theme" %}

<div class="section-padding">
  <div class="custom-container">
    <div class="row">
      <div class="col-md-6 col-12 mx-auto">
        <h1 class="text-center mb-5">Reset Your Password</h1>

        <div class="reset-password-container p-4 border rounded-8">
          {% form 'reset_customer_password' %}
            {% if form.errors %}
              <div class="alert alert-danger">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <p class="mb-4">Enter a new password for {{ form.email }}</p>

            <div class="form-group mb-3">
              <label for="password">Password</label>
              <input
                type="password"
                name="customer[password]"
                id="password"
                class="form-control"
                autocomplete="new-password">
            </div>

            <div class="form-group mb-4">
              <label for="password_confirmation">Confirm Password</label>
              <input
                type="password"
                name="customer[password_confirmation]"
                id="password_confirmation"
                class="form-control"
                autocomplete="new-password">
            </div>

            <button type="submit" class="btn-main w-100">Reset Password</button>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>