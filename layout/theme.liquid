  <script>
(function () {
  const SUPPORTED_LANGUAGES = ["en","al","de","fr","it","rs"];
  const SUPPORTED_COUNTRIES = ["al","de","xk","me","mk","rs","ch"];
  const DEFAULT_LANG = "en";
  const DEFAULT_COUNTRY = "de";
  const ORIGIN = window.location.origin;

  const FORCED_LANG_BY_COUNTRY = { rs:"rs", al:"al", xk:"al" };

  function getPrimaryLocale() {
    const raw = (navigator.languages && navigator.languages[0]) || navigator.language || "";
    const m = raw.replace("_","-").toLowerCase().split("-");
    return { lang: m[0] || "" };
  }

  function inferLanguage() {
    const { lang } = getPrimaryLocale();
    return SUPPORTED_LANGUAGES.includes(lang) ? lang : DEFAULT_LANG;
  }

  function currentSlug() {
    const m = location.pathname.match(/^\/([a-z]{2})-([a-z]{2})(\/|$)/i);
    return m ? `${m[1].toLowerCase()}-${m[2].toLowerCase()}` : null;
  }

  function buildTargetUrl(lang, country) {
    const strippedPath = location.pathname.replace(/^\/[a-z]{2}-[a-z]{2}(?=\/|$)/i, "");
    return ORIGIN + `/${lang}-${country}` + strippedPath + (location.search||"") + (location.hash||"");
  }

  (function enforceLocaleSlug() {
    const geoEl = document.getElementById("geo");
    const detectedCountry = geoEl && geoEl.dataset ? (geoEl.dataset.country || "").toLowerCase() : "";
    const country = SUPPORTED_COUNTRIES.includes(detectedCountry) ? detectedCountry : DEFAULT_COUNTRY;
    const baseLang = inferLanguage();
    const lang = (FORCED_LANG_BY_COUNTRY[country] && SUPPORTED_LANGUAGES.includes(FORCED_LANG_BY_COUNTRY[country])) ? FORCED_LANG_BY_COUNTRY[country] : baseLang;
    const target = `${lang}-${country}`;
    if (currentSlug() !== target) window.location.replace(buildTargetUrl(lang, country));
  })();
})();
</script>


